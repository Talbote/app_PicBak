{% extends 'layouts/base.html.twig' %}

{% block title "invoice" %}

{% block body %}

    <div data-aos="fade-zoom-in" data-aos-easing="ease-in-back" data-aos-delay="300" data-aos-offset="0" class="row">
    {% if app.user.isRecordInvoice == true %}
        <div class="col-md-6 mx-auto">
            <div class="my-5 text-center">

                <h1>Facture</h1>
                <p>Email: <span class="">{{ invoice.customer_email }} </span></p>
                <p>PFG: <span class="">{{ invoice.invoice_pdf }} </span></p>
                <p>Subscription purchase date:<span class="">
                            {{ subscription.current_period_start|date('Y-m-d H:i:s') }} </span>
                </p>
                <p>End of subscription period:<span class="">
                            {{ subscription.current_period_end|date('Y-m-d H:i:s') }} </span>
                </p>

            </div>
        </div>
        </div>
    {% else %}

            <div class="col-md-6 col-lg-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">List Invoice</span>
                </h4>

                <!-- URL INVOICE -->
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">name invoice </h6>
                            <small class="text-muted">description</small>
                        </div>
                        <span class="text-muted">link</span>
                    </li>
                </ul>
                <!-- END URL INVOICE -->

            </div>

    {% endif %}


{% endblock %}


