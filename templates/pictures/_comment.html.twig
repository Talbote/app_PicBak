<!-- DIV COL COMMENT-->
<div class="col-md-6 mx-auto">

    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div>
                <p><i class="far fa-comment"></i></p>
            </div>


            <!-- SEND COMMENT -->
            <!-- LINK LIKE -->

                <div class="row">

                    {{ form_start(commentForm) }}

                    {{ form_row(commentForm.textComment ) }}
                    <a href="{{ path('app_picture_show', {'id' : picture.id }) }}" class="btn btn-link js-form-comment">
                    {{ form_widget(commentForm.send ) }}
                    </a>
                    {{ form_end(commentForm) }}

                </div>

            <!-- END SEND COMMENT -->


            <div>
                <h1 class="h5  text-center text-muted text-secondary">Comments
                </h1>
                <div id="cmntContr">
                    {% for comment in comment %}
                        <div class="headings d-flex justify-content-between align-items-center mb-3">
                        </div>
                        <div class="card p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="user d-flex flex-row align-items-center">
                                    <img src="https://i.imgur.com/hczKIze.jpg" width="30"
                                         class="user-img rounded-circle mr-2">
                                    <span><small
                                                class="font-weight-bold text-primary">{{ comment.user.fullName }}</small>
                                                <small class="font-weight-bold text-break">{{ comment.textComment }}</small>
                                            </span></div>
                                <small>
                                    <time datetime="{{ comment.createdAt|date('Y-m-d H:i:s') }}"></time>{{ comment.createdAt|ago }}
                                </small>
                            </div>
                            <div class="action d-flex justify-content-between mt-2 align-items-center">
                                <div class="reply px-4">
                                    <small>Remove</small>
                                    <span class="dots"></span>
                                    <small>Reply</small>
                                    <span class="dots"></span>
                                    <small>Translate</small>
                                </div>
                                <div class="icons align-items-center">
                                    <i class="fa fa-star text-warning"></i>
                                    <i class="fa fa-check-circle-o check-icon"></i>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END DIV COL COMMENT-->