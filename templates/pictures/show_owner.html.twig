{% extends 'layouts/base.html.twig' %}

{% block title picture.title %}

{% block body %}
    <!-- DIV ROW-->
    <div class="row">

        <!-- DIV COL-->
        <div class="col-md-6 mx-auto">

            <!-- CONTENT PICTURE DIV-->
            <div class="picture bg-white rounded shadow">
                <div class="mw-100 rounded-top overflow-hidden">

                    <img src="{{ ( picture.imageName ? vich_uploader_asset(picture) : asset('build/images/empty.jpg')) | imagine_filter('squared_thumbail_medium') }}"
                         alt="{{ picture.title }}" class="w-100"/>
                </div>
                <div class="pl-3 pt-3 pr-3 pb-3">
                    <h1 class="h5 text-muted text-decoration-none text-secondary">{{ picture.title }}
                    </h1>
                    <!-- condition limit chaine de caratere |u.truncate(10,'...')-->

                    <!-- TITLE -->
                    <p class="text-muted">
                        <small>Submitted
                            <time datetime="{{ picture.createdAt|date('Y-m-d H:i:s') }}"> {{ picture.createdAt|ago }}</time>
                            by {{ picture.user.fullName }}
                        </small>
                    </p>
                    <!-- END TITLE -->
                    <!-- DESCRIPTION -->
                    <p class="text-muted text-break">{{ picture.description|u.truncate(9,'...', false) }}</p>
                    <!-- END DESCRIPTION -->

                    {% if is_granted('ROLE_USER') %}

                    {# Ici le contenu réservé aux utilisateurs connectés #}

                    <!--  FORM + EDIT + DELETE -->
                    <div>
                        <!-- LINK BUTTON FOR EDIT -->
                        <a href="{{ path('app_picture_edit' , {id: picture.id}) }}" class="btn btn-light">Edit</a>
                        <!-- END BUTTON LINK FOR EDIT -->
                        <!-- LINK BUTTON FOR DELETE -->
                        <a href="#"
                           onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-picture-delete-form').submit();"
                           class="btn btn-light">Delete</a>

                        <!-- END BUTTON LINK FOR DELETE -->
                        <form id="js-picture-delete-form" action="{{ path('app_picture_delete', {id: picture.id}) }}"
                              method="post"
                              style="display:none">

                            <!-- insertion d'un token  dans la method DELETE-->
                            <input type="hidden" name="csrf_token_picture_delete"
                                   value="{{ csrf_token('picture_deletion_' ~ picture.id) }}">

                            <input type="hidden" name="_method" value="DELETE">
                            <!--  <input type="submit" value="Delete"> -->
                        </form>
                        <!-- END BUTTON LINK FOR DELETE -->

                    </div>
                </div>
                <!--  END FORM + EDIT + DELETE -->
                {% endif %}
            </div>
            <!-- END CONTENT PICTURE DIV-->
        </div>
        <!-- END DIV COL-->

        <!-- DIV COL COMMENT-->
        <div class="col-md-6 mx-auto">
            <div>
                <h1 class="h5  text-center text-muted text-secondary">Comments
                </h1>
                {% for comment in comment %}


                    <div class="rounded-top pt-3 pl-3 pr-3 bg-light">
                        <p class="text-bold text-break">{{ comment.user.fullName }}</p>
                        <p>{{ comment.textComment }} </p>
                        <p class="text-muted">
                            <small>
                                <time datetime="{{ comment.createdAt|date('Y-m-d H:i:s') }}"></time>
                                {{ comment.createdAt|ago }}
                            </small>

                        </p>
                    </div>
                {% endfor %}
            </div>
            <div>
                <h1> add comment</h1>
                <p> {{ form(commentForm) }} </p>
            </div>


        </div>
        <!-- END DIV COL COMMENT-->


    </div>
    <!-- END DIV ROW-->

{% endblock %}