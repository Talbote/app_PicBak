{% extends 'layouts/base.html.twig' %}


   {% block title 'profil ' %}
{% block body %}






    <div class="row">
        <div class="col-md-6 mx-auto text-center">

            <h1 class="my-5"> Profile</h1>

            <img src="{{ ( user.imageName ? vich_uploader_asset(user) : asset('build/images/empty.jpg')) | imagine_filter('squared_thumbail_small') }}"
                 alt="{{ user.imageName }}" class="w-100"/>
            <p class="lead">{{ user.email }}</p>
            {% if user.isVerified == false %}
                <p>Account Verified : No </p>
                <p class="text-muted">Confirme your <a href="{{ path('app_resend_email') }}">Account</a>
                </p>

            {% else %}
                <p>Account Verified : Yes </p>
            {% endif %}
            <p>Account Created :
                <time datetime="{{ user.createdAt|date('Y-m-d H:i:s') }}"> {{ user.createdAt|ago }}</time>
            </p>
            <h2> {{ app.user.fullName }}</h2>
            <p>
                <a href="{{ path('app_profil_edit') }}" class="btn btn-light text-muted">Edit Profil</a>
                <a href="{{ path('app_profil_change_password') }}" class="btn btn-light text-muted">Change password</a>
            </p>


        </div>
    </div>
{% endblock %}


