{% extends 'layouts/base.html.twig' %}

{% block title %} {{ 'Register'|trans }} {% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <div class="row" data-aos="fade-zoom-in"
         data-aos-easing="ease-in-back"
         data-aos-delay="300"
         data-aos-offset="0">
        <div class="col-md-6 mx-auto">

            <h1 class="my-5 text-center">{{ 'Register'|trans }}</h1>
            <p class="mb-5 text-center text-muted">{{ 'Complete the fields'|trans }}</p>

            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-12 text-center ">
                    {{ form_row(registrationForm.nickName, {label: 'User name'|trans }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.firstName, {label: 'First name'|trans }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.lastName, {label: 'Last name'|trans }) }}
                </div>

            </div>
            <div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword.first, {label: 'Password'|trans }) }}
                {{ form_row(registrationForm.plainPassword.second, {label: 'Repeat Password'|trans }) }}
                {{ form_row(registrationForm.agreeTerms, {label: 'Agree terms'|trans }) }}
            </div>


            <button type="submit" class="btn btn-lg btn-block btn-primary"
                    formnovalidate>{{ 'Register'|trans }}</button>

            <p class="mt-5 mb-3 text-center text-muted">{{ 'Already have an account?'|trans }}<a
                        href="{{ path('app_login') }}"> {{ 'Login'|trans }} </a></p>


            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
