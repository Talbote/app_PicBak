{% extends 'layouts/base.html.twig' %}

{% block title {{ 'Reset your password'|trans }}%}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mb-5 mt-3 text-center">Reset your password</h1>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}

            <p class="mb-5 text-center text-muted">
                {{ 'Enter your email address and we we will send you a
                    link to reset your password.'|trans }}</p>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}


            <button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'Send password reset email'|trans }}</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}