{% extends 'layouts/base.html.twig' %}

{% block title %}{{ 'Reset your password'|trans }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mb-5 mt-3 text-center">{{ 'Reset your password'|trans }}</h1>

            {{ form_start(resetForm) }}
            {{ form_row(resetForm.first, {label: 'Password'|trans }) }}
            {{ form_row(resetForm.second, {label: 'Repeat password'|trans }) }}

            <button type="submit" class="btn btn-primary btn-lg btn-block">{{ 'Reset password'|trans }}</button>
            {{ form_end(resetForm) }}
        </div>


    </div>

{% endblock %}
